<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TopBottom">
        <item name="android:background">@color/teal</item>
    </style>

    <style name="Motto">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titles">
        <item name="android:fontFamily">@font/montserratbold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/dark_grey</item>
    </style>

    <style name="Circular">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedTop">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">15%</item>
        <item name="cornerSizeTopRight">15%</item>
        <item name="cornerSizeBottomLeft">15%</item>
        <item name="cornerSizeBottomRight">15%</item>
    </style>

    <style name="AppName">
        <item name="android:fontFamily">@font/luckiestguy"</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">32sp</item>
        <item name="android:text">@string/app_name</item>
    </style>


</resources>